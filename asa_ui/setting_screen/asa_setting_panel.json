    //World Seed
    "asa_world_seed_label": {
        "size": [ "default", 10 ],
        "text": "#item_name",
        "type": "label",
        "layer": 999,
        "color": [ 0.3, 0.3, 0.3 ],
        "bindings": [
            {
                "binding_name": "#world_seed",
                "binding_name_override": "#item_name"
            }
        ]
    },

    "asa_world_name_label": {
        "size": [ "default", 10 ],

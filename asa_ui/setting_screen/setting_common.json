                    "$button_icon_outline_texture": "textures/ui/controller_glyph",
                    "$button_text": "options.category.game",
                    "$toggle_property_bag": {
                        "#panel_title": "createWorldScreen.game.settings"
                    }
                }
            },
            {
                "space": {
                    "type": "panel",
                    "size": [ 1, 1 ]
                }
            },
            {
                "2@asa_setting_button_template": {
                    "$toggle_group_forced_index": 200,
                    "$toggle_view_binding_name": "multiplayer_button_toggle",

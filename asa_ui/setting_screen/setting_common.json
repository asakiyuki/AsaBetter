{
    "namespace": "asa_setting_common",

    "asa_setting_common": {
        "type": "stack_panel",
        "size": [ "100%", "100%c" ],

        "$asa_header_text_color|default": "none",
        "$toggle_name|default": "asa_null",
        "$button_text_binding_type|default": "none",
        "$button_text_grid_collection_name|default": "none",
        "$button_binding_condition|default": "none",
        "$button_offset|default": [ 0, 0 ],

        "controls": [
            {
                "@asa_world_setting_selecter": {}
            },
            {
                "@asa_realm_setting_selecter": {}
            },
            {
                "@asa_setting_selecter": {}
            },
            {
                "@asa_world_addon_selecter": {}
            }
        ]
    },


{
    "namespace": "asa_music_player_content",

    "asa_music_player_selected": {
        "type": "stack_panel",
        "size": [ "100%", "100%c" ],
        "bindings": [
            {
                "binding_type": "view",
                "source_control_name": "67883549_search_music",
                "source_property_name": "#item_name",
                "target_property_name": "#asa_search"
            },
            {
                "binding_type": "view",
                "source_property_name": "(#asa_search = '')",
                "target_property_name": "#visible"
            }
        ],
        "controls": [
            {
                "@asa_font_setup.text_and_background": {

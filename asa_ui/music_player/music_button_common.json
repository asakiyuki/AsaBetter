{
    "namespace": "asa_music_button_common",

    //Selected Button Template
    "asa_toggle_template": {
        "type": "toggle",
        "toggle_name": "$asa_toggle_name",
        "$asa_toggle_name|default": "asa_null",
        "toggle_group_default_selected": 1,
        "toggle_group_forced_index": "$asa_toggle_index",
        "$asa_toggle_index|default": 1,
        "property_bag": { "#toggle_state": true },
        "sound_name": "random.click",
        "sound_volume": 1.0,
        "sound_pitch": 1.0,
        "radio_toggle_group": true,
        "button_mappings": [{ "from_button_id": "button.menu_select", "to_button_id": "button.menu_select", "mapping_type": "pressed" },{ "from_button_id": "button.menu_ok", "to_button_id": "button.menu_ok", "mapping_type": "focused" }],

        "unchecked_control": "asa_disable",
        "checked_control": "asa_enable",
        "unchecked_hover_control": "asa_disable_hover",
        "checked_hover_control": "asa_enable_hover"
    },

    "asa_main_menu_selected": {
        "type": "panel",
        "controls": [
            {
                "$asa_selected_bindings@asa_toggle_template": {
                    "$asa_toggle_index": 0,
                    "$asa_button_type": "asa_music_template",
                    "controls": [
                        {
                            "asa_disable": {
                                "type": "image",
                                "texture": "asa_textures/ui/button_and_toggle/asa_button",
                                "color": [ 0, 0, 0 ],
                                "controls": [
                                    {
                                        "@$asa_button_type": {}
                                    }
                                ]
                            }
                        },
                        {
                            "asa_enable": {
                                "type": "image",
                                "texture": "asa_textures/ui/button_and_toggle/asa_button",
                                "color": [ 0, 0, 0 ],
                                "controls": [
                                    {
                                        "@$asa_button_type": {}
                                    }
                                ]
                            }
                        },
                        {
                            "asa_disable_hover": {
                                "type": "image",
                                "texture": "asa_textures/ui/button_and_toggle/asa_button",
                                "color": "@asa_button_animation.asa_button_color_1",
                                "controls": [
                                    {
                                        "@$asa_button_type": {}
                                    }
                                ]
                            }
                        },
                        {
                            "asa_enable_hover": {
                                "type": "image",
                                "texture": "asa_textures/ui/button_and_toggle/asa_button",
                                "color": "@asa_button_animation.asa_button_color_1",
                                "controls": [
                                    {
                                        "@$asa_button_type": {}
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]  
    },

    "asa_go_back_button": {
        "type": "panel",
        "controls": [
            {
                "asa_null@asa_toggle_template": {
                    "$asa_toggle_index": 1,
                    "$asa_button_type": "asa_goback_text",
                    "controls": [
                        {
                            "asa_disable": {
                                "type": "image",
                                "texture": "textures/ui/button_borderless_light",
                                "size": [ "100% - 2px", "100% - 2px"],
                                "$asa_button_color": "$title_text_color",
                                "layer": 1,
                                "controls": [
                                    {
                                        "@$asa_button_type": {}
                                    },
                                    {
                                        "border_button": {
                                            "type": "image",
                                            "texture": "textures/ui/focus_border_white",
                                            "size": [ "100% + 2px", "100% + 2px" ],
                                            "layer": 1,
                                            "color": [ 0, 0, 0 ]
                                        }
                                    }
                                ]
                            }
                        },
                        {
                            "asa_enable": {
                                "type": "image",
                                "texture": "textures/ui/button_borderless_light",
                                "$asa_button_color": "$title_text_color",
                                "layer": 1,
                                "size": [ "100% - 2px", "100% - 2px"],
                                "controls": [
                                    {
                                        "@$asa_button_type": {}
                                    },
                                    {
                                        "border_button": {
                                            "type": "image",
                                            "texture": "textures/ui/focus_border_white",
                                            "layer": 1,
                                            "size": [ "100% + 2px", "100% + 2px" ],
                                            "color": [ 0, 0, 0 ]
                                        }
                                    }
                                ]
                            }
                        },
                        {
                            "asa_disable_hover": {
                                "type": "image",
                                "texture": "textures/ui/button_borderless_lighthover",
                                "layer": 1,
                                "size": [ "100% - 2px", "100% - 2px"],
                                "controls": [
                                    {
                                        "@$asa_button_type": {}
                                    },
                                    {
                                        "border_button": {
                                            "type": "image",
                                            "texture": "textures/ui/focus_border_white",
                                            "layer": 1,
                                            "size": [ "100% + 2px", "100% + 2px"]
                                        }
                                    }
                                ]
                            }
                        },
                        {
                            "asa_enable_hover": {
                                "type": "image",
                                "texture": "textures/ui/button_borderless_lighthover",
                                "size": [ "100% - 2px", "100% - 2px"],
                                "layer": 1,
                                "controls": [
                                    {
                                        "@$asa_button_type": {}
                                    },
                                    {
                                        "border_button": {
                                            "type": "image",
                                            "texture": "textures/ui/focus_border_white",
                                            "layer": 1,
                                            "size": [ "100% + 2px", "100% + 2px"]
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]  
    },

    "asa_music_template": {
        "type": "panel",
        "controls": [
            {
                "asa_music_outline": {
                    "type": "image",
                    "texture": "textures/ui/focus_border_white",
                    "size": [ 22, 22 ],
                    "anchor_from": "left_middle",
                    "anchor_to": "left_middle",
                    "offset": [ 5, 0 ],
                    "layer": 1,
                    "controls": [
                        {
                            "music_thumb": {
                                "type": "image",
                                "layer": 2,
                                "texture": "$asa_music_player_icon",
                                "size": [ "100% - 2px", "100% - 2px" ]
                            }
                        }
                    ]
                }
            },
            {
                "button_text": {
                    "type": "label",
                    "max_size": [ "100% - 50px", 10 ],
                    "text": "$asa_button_text",
                    "anchor_from": "left_middle",
                    "anchor_to": "left_middle",
                    "layer": 2,
                    "offset": [ 32, 0 ]
                }
            }
        ]
    },

    "asa_goback_text": {
        "type": "panel",
        "controls": [
            {
                "button_text": {
                    "type": "label",
                    "max_size": [ "100% - 50px", 10 ],
                    "text": "Go Back",
                    "color": "$asa_button_color",
                    "layer": 2
                }
            }
        ]
    },

    //Play and Stop Music Toggle Template
    "button_icon_and_label_template": {
        "type": "panel",
        "$asa_music_player_icon_size|default": [ 25, 25 ],
        "controls": [
            {
                "icon_outline": {
                    "type": "image",
                    "size": "$asa_music_player_icon_size",
                    "offset": [ 2.5, 0 ],
                    "texture": "textures/ui/focus_border_white",
                    "color": "$glyph_color",
                    "anchor_from": "left_middle",
                    "anchor_to": "left_middle",
                    "controls": [
                        {
                            "icon": {
                                "type": "image",
                                "texture": "$asa_music_player_icon",
                                "size": [ "100% - 2px", "100% - 2px" ]
                            }
                        }
                    ]
                }
            },
            {
                "text": {
                    "type": "label",
                    "max_size": [ "default", 20 ],
                    "anchor_from": "left_middle",
                    "anchor_to": "left_middle",
                    "offset": [ 30, 0 ],
                    "text": "$button_text",
                    "color": "$text_color"
                }
            }
        ]
    },

    //Stop Music & Play Music
    "asa_play_and_stop_stack": {
        "type": "stack_panel",
        "size": [ "100%c", "100%cm" ],
        "orientation": "horizontal",
        "anchor_from": "right_middle",
        "anchor_to": "right_middle",
        "layer": 150,
        "offset": [ -10, 0 ],
        "controls": [
            {
                "@asa_play": {}
            },
            {
                "@asa_stop": {}
            }
        ]
    },

    "asa_play@asa_music_play_and_stop_template": {
        "$asa_button_icon": "asa_textures/ui/play_songs",
        "$asa_better_play_music": "asa_music_pressed.play_music",
        "$asa_volume": 1.0
    },

    "asa_stop@asa_music_play_and_stop_template": {
        "$asa_button_icon": "asa_textures/ui/stop_songs",
        "$asa_better_play_music": "asa_music_pressed.stop_music",
        "$asa_volume": 0.0000000000000001
    },

    "asa_music_play_and_stop_template": {
        "type": "button",
        "size": [ 20, 20 ],

        "default_control": "asa_not_interactive",
        "hover_control": "asa_interactive",
        "pressed_control": "asa_interactive_2",
        "locked_control": "",

        "sound_name": "$asa_music_play",
        "sound_volume": "$asa_volume",
        "sound_pitch": 1,

        "layer": 100,

        "button_mappings": [
            {
                "from_button_id": "button.menu_select",
                "to_button_id": "$asa_better_play_music",
                "mapping_type": "pressed"
            },
            {
                "from_button_id": "button.menu_ok",
                "to_button_id": "$asa_better_play_music",
                "mapping_type": "focused"
            }
        ],

        "$asa_default_button": "play_and_stop_button_template",
        "controls": [
            {
                "asa_not_interactive@$asa_default_button": {
                    "$asa_button_color_extra": [ 1, 1, 1 ]
                }
            },
            {
                "asa_interactive@$asa_default_button": {
                    "$asa_button_color_extra": [ 0.333, 1.0, 1.0 ]
                }
            },
            {
                "asa_interactive_2@$asa_default_button": {
                    "$asa_button_color_extra": [ 0.333, 1.0, 1.0 ],
                    "$asa_button_pressed_offset": [ 0, 1 ]
                }
            }
        ]
    },

    "play_and_stop_button_template": {
        "type": "image",
        "size": [ 20, 20 ],
        "color": "$asa_button_color_extra",
        "texture": "$asa_button_icon",
        "offset": "$asa_button_pressed_offset"
    },

    //Music Thumb, Music name and Author
    "asa_default_state": {
        "type": "panel",
        "size": [ "100%", "100%" ],
        "controls": [
            {
                "@asa_play_and_stop_stack":{}
            },
            {
                "asa_button_bg": {
                    "type": "image",
                    "layer": -1,
                    "texture": "textures/ui/White",
                    "size": [ "100%", "100%" ],
                    "alpha": 0.5,
                    "color": "$asa_button_bg_color"
                }
            },
            {
                "twinkle": {
                    "type": "image",
                    "size": [ 10, 10 ],
                    "texture": "asa_textures/ui/twinkle",
                    "uv_size": [ 9, 9 ],
                    "uv": "@asa_setting_anims.twinkle_anims",
                    "layer": 120,
                    "anchor_from": "left_middle",
                    "anchor_to": "left_middle",
                    "visible": false,
                    "offset": [ 30, -15 ]
                }
            },
            {
                "thumbnail_outline": {
                    "type": "image",
                    "size": [ 30, 30 ],
                    "texture": "textures/ui/focus_border_white",
                    "color": "$asa_button_color",
                    "anchor_from": "left_middle",
                    "anchor_to": "left_middle",
                    "offset": [ 5, 0 ],
                    "controls": [
                        {
                            "thumbnail": {
                                "type": "image",
                                "size": [ 29, 29 ],
                                "texture": "$asa_music_thumbnail"
                            }
                        }
                    ]
                }
            },
            {
                "asa_label_panel": {
                    "anchor_from": "right_middle",
                    "anchor_to": "right_middle",
                    "size": [ "100% - 40px", "100%" ],
                    "type": "panel",
                    "offset": [ 0, 1 ],
                    "controls": [
                        {
                            "time_duration": {
                                "type": "label",
                                "max_size": [ "100% - 56px", 10 ],
                                "text": "$time_duration",
                                "offset": [ -50, -0 ],
                                "localize": false,
                                "shadow": true,
                                "anchor_from": "right_middle",
                                "anchor_to": "right_middle"
                            }
                        },
                        {
                            "name_stack": {
                                "type": "stack_panel",
                                "size": [ "100%", "100%c" ],
                                "anchor_from": "right_middle",
                                "anchor_to": "right_middle",
                                "offset": [ 0, -1 ],
                                "controls": [
                                    {
                                        "music_name": {
                                            "type": "label",
                                            "max_size": [ "100% - 78px", 10 ],
                                            "localize": false,
                                            "shadow": true,
                                            "text": "$asa_music_name"
                                        }
                                    },
                                    {
                                        "author_panel": {
                                            "type": "panel",
                                            "size": [ "100% - 78px", "100%cm" ],
                                            "controls": [
                                                {
                                                    "author_name": {
                                                        "type": "label",
                                                        "max_size": [ "100%", 16 ],
                                                        "anchor_from": "left_middle",
                                                        "anchor_to": "left_middle",
                                                        "text": "$asa_author_name",
                                                        "font_type": "smooth",
                                                        "color": [ 0.8, 0.8, 0.8 ],
                                                        "shadow": true,
                                                        "offset": [ -0.5, 0 ],
                                                        "font_scale_factor": 0.8
                                                    }
                                                }
                                            ]
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    },

    "asa_music_name_author_and_thumbnail": {
        "type": "button",

        "anchor_from": "top_middle",
        "anchor_to": "top_middle",

        "default_control": "asa_not_interactive",
        "hover_control": "asa_interactive",
        "pressed_control": "asa_interactive_2",
        "locked_control": "",

        "layer": 99,
        "$asa_play_music": "null",

        "bindings": "$asa_bindings",
        "$asa_bindings|default": [
            {
                "binding_type": "view",
                "source_control_name": "67883549_search_music",
                "source_property_name": "#item_name",
                "target_property_name": "#asa_search"
            },
            {
                "binding_type": "view",
                "source_property_name": "(((not (($asa_music_name - #asa_search) = $asa_music_name)) or (not (($asa_author_name - #asa_search) = $asa_author_name))) or (#asa_search = ''))",
                "target_property_name": "#visible"
            }
        ],

        "button_mappings": [
            {
                "from_button_id": "button.menu_select",
                "to_button_id": "$asa_play_music",
                "mapping_type": "pressed"
            },
            {
                "from_button_id": "button.menu_ok",
                "to_button_id": "$asa_play_music",
                "mapping_type": "focused"
            }
        ],

        "$asa_default_button": "asa_default_state",
        "controls": [
            {
                "asa_not_interactive@$asa_default_button": {
                    "$asa_button_color": [ 0, 0, 0 ],
                    "$asa_button_bg_color": [ 0, 0, 0 ]
                }
            },
            {
                "asa_interactive@$asa_default_button": {
                    "$asa_button_color": [ 1, 1, 1 ],
                    "$asa_button_bg_color": [ 0.1, 0.1, 0.1 ]
                }
            },
            {
                "asa_interactive_2@$asa_default_button": {
                    "$asa_button_color": [ 1, 1, 1 ],
                    "$button_pressed_offset": [ 0, 1 ],
                    "$asa_button_bg_color": [ 0.1, 0.1, 0.1 ]
                }
            }
        ]
    }
}
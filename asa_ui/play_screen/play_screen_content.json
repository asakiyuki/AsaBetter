                    "anchor_to": "top_middle",
                    "anchor_from": "top_middle",
                    "controls": [
                        //Test and need this:)
                        {
                            "friends_grid@play.label_content_template": {
                                "$label_content_label": "networkWorld.joinable_friends_label",

                                    {
                                        "requires": "$nx_os",
                                        "$label_content_label": "networkWorld.joinable_nintendo_friends_label"
                                    },
                                    {
                                        "requires": "$is_ps4",
                                        "$label_content_label": "networkWorld.joinable_berwick_friends_label"

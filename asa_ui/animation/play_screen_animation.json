{
    "namespace": "asa_play_anims",

    //Arrow Animation
    "asa_open_bottom_panel": {
        "anim_type": "offset",
        "easing": "in_back",
        "duration": 0.6,
        "from": [ 0, -10 ],
        "to": [ 0, 45 ],
        "play_event": "button.open_bottom_panel",
        "reset_event": "button.close_bottom_panel"
    },

    "asa_open_wait_panel": {
        "anim_type": "wait",
        "duration": 0.5,
        "next": "@asa_play_anims.asa_open_bottom_panel2",
        "play_event": "button.open_bottom_panel",
        "reset_event": "button.close_bottom_panel"
    },

    "asa_open_bottom_panel2": {
        "anim_type": "offset",
        "easing": "out_back",
        "duration": 1.8,
        "from": [ 0, 75 ],
        "to": [ 0, -10 ]
    },

    "asa_close_bottom_panel": {
        "anim_type": "offset",
        "easing": "out_bounce",
        "duration": 2.5,
        "from": [ 0, 45 ],
        "to": [ 0, -10 ]
    },

    "asa_close_bottom_panel2": {
        "anim_type": "offset",
        "easing": "in_back",
        "duration": 0.6,
        "from": [ 0, -10 ],
        "to": [ 0, 75 ]
    },

    //pause

{
    "namespace": "asa_exit_world_confirm_panel",

    "asa_pause_background": {
        "type": "panel",
        "bindings": [
            {
                "binding_type": "view",
                "source_control_name": "asa_mod_menu_panel",
                "source_property_name": "(not #toggle_state)",
                "target_property_name": "#visible"
            }
        ],
        "controls": [
            {
                "screen_background": {
                    "type": "image",
                    "texture": "textures/ui/screen_background",
                    "layer": -10,
                    "alpha":  0.75
                }
            }
        ]
    },

    "asa_exit_confirm_screen": {
        "type": "screen",
        "size": [ "100%", "100%" ],
        "layer": 100,
        "bindings": [
            {
                "binding_type": "view",
                "source_control_name": "asa_quit_world",
                "source_property_name": "#toggle_state",
                "target_property_name": "#visible"
            }
        ],
        "controls": [
            {
                "panel": {
                    "type": "panel",
                    "size": [ 200, 100 ],
                    "controls": [
                        {
                            "common_panel@common.common_panel": {
                                "$show_close_button": false,
                                "layer": 100,
                                "$dialog_background": "dialog_background_hollow_2"
                            }
                        },
                        {
                            "text_1": {
                                "type": "label",
                                "size": [ "default", "default" ],
                                "anchor_to": "top_middle",
                                "anchor_from": "top_middle",
                                "offset": [ 0, 9 ],
                                "layer": 120,
                                "color": "$title_text_color",
                                "text": "Leave World"
                            }
                        },
                        {
                            "des_text": {
                                "type": "label",
                                "size": [ "default", "default" ],
                                "max_size": [ "100% - 22px", 30 ],
                                "layer": 120,
                                "anchor_to": "top_left",
                                "anchor_from": "top_left",
                                "text_alignment": "left",
                                "text": "Are you sure you want to quit the world?",
                                "offset": [ 11, 25 ]
                            }
                        },
                        {
                            "button_panel": {
                                "type": "stack_panel",
                                "size": [ "100% - 14px", 30 ],
                                "anchor_to": "bottom_middle",
                                "anchor_from": "bottom_middle",
                                "layer": 120,
                                "offset": [ 0, -7 ],
                                "orientation": "horizontal",
                                "controls": [
                                    {
                                        "not_now@asa_exit_world_confirm.asa_light_button_text_toggle": {
                                            "size": [ "50%", 30 ],
                                            "layer": 120,
                                            "$button_text": "Cancel"
                                        }
                                    },
                                    {
                                        "quit_button@pause.pause_button_template": {
                                            "$pressed_button_name": "button.menu_quit",
                                            "$button_text": "pauseScreen.quit",
                                            "size": [ "50%", 30 ],
                                            "layer": 120
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    }
}
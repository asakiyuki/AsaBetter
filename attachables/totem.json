{
    "format_version": "1.10.0",
    "minecraft:attachable": {
        "description": {
            "identifier": "minecraft:totem_of_undying",
            "materials": {
                "default": "entity_alphatest"
            },

            "textures": {
                "default": "asa_textures/anime_theme/items/totem_model"
            },

            "geometry": {
                "right_default": "geometry.asa_totem_right",
                "left_default": "geometry.asa_totem_left"
            },

            "animations": {
                "third_person": "animation.asa_totem.third_person"
            },

            "scripts": {
                "animate": [
                    "third_person"
                ]
            },

            "render_controllers": [
                { "controller.render.item_right": "c.item_slot == 'main_hand'" },
                { "controller.render.item_left": "c.item_slot == 'off_hand'" }
            ]
        }
    }
}
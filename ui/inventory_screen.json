  "tab_navigation_panel_layout": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [ "100%", 27 ],
    "controls": [
      {
        "navigation_tabs": {
          "type": "panel",
          "size": [ "fill", "100%" ],
          "controls": [
            {
              "content": {
                "type": "stack_panel",
                "size": [ "100%", "100% + 4px" ],
                "anchor_to": "top_left",
                "anchor_from": "top_left",
                "offset": [ -30, 23 ],
                "controls": [
                  {
                    "construction_tab@crafting.asa_construction_tab": {
                      "size": [ 35, "100%" ]
                    }
                  },
                  {
                    "equipment_tab@crafting.asa_equipment_tab": {
                      "size": [ 35, "100%" ]
                    }
                  },
                  {
                    "items_tab@crafting.asa_items_tab": {
                      "size": [ 35, "100%" ]
                    }
                  },
                  {
                    "nature_tab@crafting.asa_nature_tab": {
                      "size": [ 35, "100%" ]
                    }
                  },
                  {
                    "asa_panel": {
                      "type": "panel",
                      "size": [ 35, 31 ]
                    }
                  },
                  {
                    "search_tab@crafting.asa_search_tab": {
                      "size": [ 35, "100%" ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

